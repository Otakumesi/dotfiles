bindkey '^]' peco-src
function peco-src() {
  local src=$(ghq list --full-path | peco --query "$LBUFFER")
  if [ -n "$src" ]; then
      BUFFER="cd $src"
      zle accept-line
  fi
  zle -R -c
}
zle -N peco-src

function find-cd() {
  cd "$(find . -type d | peco)"
}
alias fc="find-cd"

function find-vim {
  vim "$(find . | peco --select-1)"
}
alias fv="find-vim"

function git-checkout-from-peco {
  git checkout $(git branch | peco --select-1 --query "$RBUFFER")
}
alias gcp="git-checkout-from-peco"

function git-push-from-peco {
  git push origin $(git branch | peco --select-1 --query "$RBUFFER")
}
alias gpps="git-push-from-peco"

function git-pull-from-peco {
  git pull origin $(git branch | peco --select-1 --query "$RBUFFER")
}
alias gppl="git-pull-from-peco"
